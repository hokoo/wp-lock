{
    "name": "soulseekah/wp-lock",
    "description": "A library for locking and mutexes for the WordPress Core",
    "homepage": "https://github.com/soulseekah/wp-lock",
    "require": {
        "php": ">=7.4"
    },
    "autoload": {
        "files": [
            "lib/install.php",
            "lib/class-wp-lock.php",
            "lib/helpers/Database.php",
            "lib/backend/class-wp-lock-backend.php",
            "lib/backend/class-wp-lock-backend-flock.php",
            "lib/backend/class-wp-lock-backend-db.php"
        ]
    },
    "require-dev": {
        "phpunit/phpunit": "^9",
        "yoast/phpunit-polyfills": "^1.0"
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "johnpbloch/wordpress-core-installer": true
        }
    }
}
